generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // ou "mysql" ou "sqlite" dependendo do seu banco
  url      = env("DATABASE_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  email    String  @unique
  password String
  musics   Music[]
}

model Music {
  id      Int    @id @default(autoincrement())
  title   String
  artist  String
  url     String?
  userId  Int
  user    User   @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}
